<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#151515">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тысячи курсов\nв одном месте"
        android:textColor="#F2F2F3"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_layout"
        android:layout_width="538dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flexWrap="wrap"
        app:justifyContent="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="C Администрирование"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="RabbitMQ"
            android:background="@drawable/tag_selected_background"
            android:textColor="#FFFFFF"
            android:rotation="-15"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Трафик"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Контент маркетинг"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="B2B маркетинг"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Google Аналитика"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="UX исследователь"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Веб-аналитика"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Big Data"
            android:rotation="15"
            android:background="@drawable/tag_selected_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Геймдизайн"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Веб-дизайн"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Cinema 4D"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Промпт инженеринг"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Webflow"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Three.js"
            android:rotation="-15"
            android:background="@drawable/tag_selected_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Парсинг"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Python-разработка"
            android:background="@drawable/tag_background"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp"
            android:textSize="16sp" />


        <!-- Добавьте другие теги -->

    </com.google.android.flexbox.FlexboxLayout>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#12B956"
        android:text="Продолжить"
        android:textColor="#FFFFFF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
